<div class="container mt-5">
  <h2>Application Form</h2>
  <%- include("./partials/messages.ejs"); %>
  <form action="/apply" method="POST">
    <div class="form-group form-floating mt-3">
      <input
        type="text"
        class="form-control"
        id="firstname"
        name="firstname"
        required
        placeholder="First Name"
        value="<%= user ? user.firstname : '' %>"
      />
      <label for="firstname">First Name</label>
    </div>
    <div class="form-group form-floating mt-3">
      <input
        type="text"
        class="form-control"
        id="lastname"
        name="lastname"
        required
        placeholder="Last Name"
        value="<%= user ? user.lastname : '' %>"
      />
      <label for="lastname">Last Name</label>
    </div>
    <div class="form-group form-floating mt-3">
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        required
        placeholder="Email"
        value="<%= user ? user.email : '' %>"
      />
      <label for="email">Email</label>
    </div>
    <div class="form-group form-floating mt-3">
      <input
        type="tel"
        class="form-control"
        id="phone"
        name="phone"
        required
        placeholder="Phone"
        value="<%= user ? user.phone : '' %>"
      />
      <label for="phone">Phone</label>
    </div>
    <div class="form-group form-floating mt-3">
      <input
        type="text"
        class="form-control"
        id="address"
        name="address"
        required
        placeholder="Address"
        value="<%= user ? user.address : '' %>"
      />
      <label for="address">Address</label>
    </div>
    <div class="form-group form-floating mt-3">
      <input
        type="text"
        class="form-control"
        id="gamertag"
        name="gamertag"
        required
        placeholder="Gamertag"
        value="<%= user ? user.gamertag : '' %>"
      />
      <label for="gamertag">Gamertag</label>
    </div>

    <!-- LIST OF GAMES -->
    <div class="row">
      <div class="col-12">
        <label class="mt-3" for="games-list"
          >Select Games you want to apply (Max: 3):
        </label>
        <div
          class="form-group"
          id="games-list"
          role="group"
          aria-label="Games checkboxes"
        >
          <div>
            <input
              type="checkbox"
              class="btn-check"
              id="valorant"
              autocomplete="off"
              name="games[]"
              value="&nbsp;Valorant"
            />
            <label class="btn btn-outline-dark mt-2" for="valorant"
              >Valorant</label
            >

            <input
              type="checkbox"
              class="btn-check"
              id="fortnite"
              autocomplete="off"
              name="games[]"
              value="&nbsp;Fortnite"
            />
            <label class="btn btn-outline-dark mt-2" for="fortnite"
              >Fortnite</label
            >

            <input
              type="checkbox"
              class="btn-check"
              id="warzone"
              autocomplete="off"
              name="games[]"
              value="&nbsp;Call of Duty Warzone III"
            />
            <label class="btn btn-outline-dark mt-2" for="warzone"
              >Call of Duty Warzone III</label
            >

            <input
              type="checkbox"
              class="btn-check"
              id="cod_mobile"
              autocomplete="off"
              name="games[]"
              value="&nbsp;Call of Duty Mobile"
            />
            <label class="btn btn-outline-dark mt-2" for="cod_mobile"
              >Call of Duty Mobile</label
            >

            <input
              type="checkbox"
              class="btn-check"
              id="farlight_84"
              autocomplete="off"
              name="games[]"
              value="&nbsp;Farlight 84"
            />
            <label class="btn btn-outline-dark mt-2" for="farlight_84"
              >Farlight 84</label
            >

            <input
              type="checkbox"
              class="btn-check"
              id="csgo"
              autocomplete="off"
              name="games[]"
              value="&nbsp;Counter-Strike: Global Offensive"
            />
            <label class="btn btn-outline-dark mt-2" for="csgo">CS:GO</label>

            <input
              type="checkbox"
              class="btn-check"
              id="overwatch"
              autocomplete="off"
              name="games[]"
              value="&nbsp;Overwatch"
            />
            <label class="btn btn-outline-dark mt-2" for="overwatch"
              >Overwatch</label
            >

            <input
              type="checkbox"
              class="btn-check"
              id="apex"
              autocomplete="off"
              name="games[]"
              value="&nbsp;Apex Legends"
            />
            <label class="btn btn-outline-dark mt-2" for="apex"
              >Apex Legends</label
            >

            <input
              type="checkbox"
              class="btn-check"
              id="pubg"
              autocomplete="off"
              name="games[]"
              value="&nbsp;PUBG"
            />
            <label class="btn btn-outline-dark mt-2" for="pubg">PUBG</label>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group form-floating mt-3">
      <input
        type="text"
        class="form-control"
        id="discord"
        name="discord"
        required
        placeholder="Discord account"
        value="<%= user ? user.discord : '' %>"
      />
      <label for="discord">Discord account</label>
    </div>
    <div class="form-group form-floating mt-3">
      <input
        type="text"
        class="form-control"
        id="steam"
        name="steam"
        required
        placeholder="Steam account"
        value="<%= user ? user.steam : '' %>"
      />
      <label for="steam">Steam account</label>
    </div>
    <div class="form-group form-floating mt-3">
      <input
        type="text"
        class="form-control"
        id="riot"
        name="riot"
        required
        placeholder="Riot account"
        value="<%= user ? user.riot : '' %>"
      />
      <label for="riot">Riot account</label>
    </div>
    <div class="form-group form-floating mt-3">
      <input
        type="text"
        class="form-control"
        id="rank"
        name="rank"
        placeholder="Rank"
        value="<%= user ? user.rank : '' %>"
      />
      <label for="rank">Rank</label>
    </div>
    <div class="form-group form-floating mt-3">
      <textarea
        type="text"
        class="form-control"
        id="bio"
        name="bio"
        required
        value="<%= user ? user.bio : '' %>"
      ></textarea>
      <label for="bio">Tell us more about yourself...</label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit</button>
  </form>
</div>
